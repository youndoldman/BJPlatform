<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.donno.nj.dao.SysUserDao">
    <resultMap id="DetailResultMap" type="com.donno.nj.domain.SysUser">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="id" property="userId" jdbcType="VARCHAR"/>
        <result column="job_number" property="jobNumber" jdbcType="VARCHAR"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="mobile_phone" property="mobilePhone" jdbcType="VARCHAR"/>
        <result column="office_phone" property="officePhone" jdbcType="VARCHAR"/>
        <result column="email" property="email" jdbcType="VARCHAR"/>
        <result column="note" property="note" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
        <association property="userGroup" javaType="com.donno.nj.domain.Group">
            <result column="group_code" property="code" jdbcType="VARCHAR" />
            <result column="group_name" property="name" jdbcType="VARCHAR" />
        </association>
    </resultMap>

    <sql id="TblSysUser">
        t_sysuser
    </sql>

    <!--添加-->

    <sql id="InsertColumnList">
        user_idx, job_number, mobile_phone,office_phone,email
    </sql>



    <insert id="insert">
        INSERT  INTO <include refid="TblSysUser"/>(<include refid="InsertColumnList"/>)
        VALUES(#{id}, #{jobNumber},#{mobilePhone},#{officePhone},#{email})
    </insert>

    <!--删除-->

    <delete id="deleteByUserIdx" parameterType="Integer">
        DELETE FROM <include refid="TblSysUser"/> WHERE user_idx=#{id}
    </delete>

    <!--修改-->

    <update id="update">
        UPDATE <include refid="TblSysUser"/>
        <set>
            <if test="jobNumber != null">job_number = #{jobNumber},</if>
            <if test="mobilePhone != null">mobile_phone = #{mobilePhone},</if>
            <if test="officePhone != null">office_phone = #{officePhone},</if>
            <if test="email != null">email = #{email},</if>
        </set>
        WHERE user_idx = #{id}
    </update>


    <!--查询-->

    <sql id="JoinTableList">
        t_sysuser,t_group,t_user
    </sql>

    <sql id="JoinWhereCondition">
          t_user.id = t_sysuser.user_idx and
          t_user.group_idx = t_group.id
    </sql>

    <sql id="JoinSelectColumn">
        t_user.id, t_user.user_id,t_user.name,t_user.password,t_user.note,t_user.create_time,t_user.update_time,
        t_sysuser.job_number,t_sysuser.mobile_phone,t_sysuser.office_phone,t_sysuser.email ,
        t_group.code as group_code,t_group.name as  group_name    </sql>

    <select id="getList" resultMap="DetailResultMap">
        SELECT <include refid="JoinSelectColumn"/>
        FROM <include refid="JoinTableList"/>
        WHERE
        (<include refid="JoinWhereCondition"/>)

        <if test="userId != ''">
            and (t_user.user_id = '${userId}')
        </if>
        <if test="orderBy != ''">
            ORDER BY   ${orderBy}
        </if>
        limit #{limit} offset #{offset};
    </select>



    <select id="findByUserId" resultMap="DetailResultMap">
        SELECT <include refid="JoinSelectColumn"/>
        FROM <include refid="JoinTableList"/>
         WHERE
        <include refid="JoinWhereCondition"/>
        and
        user_id = #{userId}
    </select>





    <select id="count" resultType="Integer">
        SELECT COUNT(*)
        FROM <include refid="TblSysUser"/>
    </select>

