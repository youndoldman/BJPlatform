<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.donno.nj.dao.SysUserDao">
    <resultMap id="DetailResultMap" type="com.donno.nj.domain.SysUser">
        <id column="u_id" property="id" jdbcType="INTEGER"/>
        <result column="user_id" property="userId" jdbcType="VARCHAR"/>
        <result column="job_number" property="jobNumber" jdbcType="VARCHAR"/>
        <result column="u_name" property="name" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="gender" property="gender" jdbcType="INTEGER"/>
        <result column="mobile_phone" property="mobilePhone" jdbcType="VARCHAR"/>
        <result column="office_phone" property="officePhone" jdbcType="VARCHAR"/>
        <result column="email" property="email" jdbcType="VARCHAR"/>
        <result column="u_note" property="note" jdbcType="VARCHAR"/>
        <result column="u_create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="u_update_time" property="updateTime" jdbcType="TIMESTAMP"/>
        <association property="group" javaType="com.donno.nj.domain.Group">
            <id column="g_id" property="id"  jdbcType="INTEGER"/>
            <result column="code" property="code" jdbcType="VARCHAR" />
            <result column="g_name" property="name" jdbcType="VARCHAR" />
            <result column="g_create_time" property="createTime" jdbcType="TIMESTAMP"/>
            <result column="g_update_time" property="updateTime" jdbcType="TIMESTAMP"/>
        </association>
    </resultMap>

    <sql id="TableName">
        t_sysuser
    </sql>

    <sql id="JoinTableList">
        t_sysuser,t_group
    </sql>

    <sql id="JoinWhereCondition">
        t_sysuser.group_id = t_group.id
    </sql>

    <sql id="JoinSelectColumn">
        t_sysuser.id as u_id,t_sysuser.user_id,t_sysuser.job_number,t_sysuser.name as u_name,t_sysuser.password,
        t_sysuser.gender,t_sysuser.mobile_phone,t_sysuser.office_phone,t_sysuser.email,t_sysuser.note as u_note,
        t_sysuser.create_time as u_create_time,
        t_sysuser.update_time as u_update_time,
        t_group.id as g_id,t_group.code ,t_group.name as g_name,t_group.note as g_note,t_group.create_time as g_create_time,t_group.update_time as g_update_time
    </sql>

    <select id="getList" resultMap="DetailResultMap">
        SELECT <include refid="JoinSelectColumn"/>
        FROM <include refid="JoinTableList"/>
        WHERE
        (<include refid="JoinWhereCondition"/>)
        <if test="userId != ''">
            and (t_sysuser.user_id = '${userId}')
        </if>
        <!--<if test="jobNumber != ''">-->
            <!--and (t_sysuser.job_number = '${jobNumber}')-->
        <!--</if>-->
        <!--<if test="jobNumber != ''">-->
            <!--and t_sysuser.job_number = '${jobNumber}'-->
        <!--</if>-->
        <!--<if test="name != ''">-->
            <!--and t_sysuser.name = '${name}'-->
        <!--</if>-->
        <!--<if test="mobilePhone != ''">-->
            <!--and t_sysuser.mobile_phone = '${mobilePhone}'-->
        <!--</if>-->
        <!--<if test="officePhone != ''">-->
            <!--and t_sysuser.office_phone = '${officePhone}'-->
        <!--</if>-->
        <if test="orderBy != ''">
          <if test="orderBy == 'userId'">
            ORDER BY   t_sysuser.user_id
          </if>
        </if>
        limit #{limit} offset #{offset};
    </select>

    <sql id="InsertColumnList">
        user_id, job_number,name, password, group_id, mobile_phone,office_phone,email,note
    </sql>

    <insert id="insert">
        INSERT  INTO <include refid="TableName"/>(<include refid="InsertColumnList"/>)
        VALUES(#{userId}, #{jobNumber},#{name},#{password},#{group.id} ,#{mobilePhone},#{officePhone},#{email},#{note})
    </insert>

    <select id="findByUserId" resultMap="DetailResultMap">
        SELECT <include refid="JoinSelectColumn"/>
        FROM <include refid="JoinTableList"/>
         WHERE
        <include refid="JoinWhereCondition"/>
        and
        user_id = #{userId}
    </select>


    <delete id="deleteByUserId" parameterType="String">
        DELETE FROM <include refid="TableName"/> WHERE user_id=#{userId}
    </delete>


    <select id="count" resultType="Integer">
        SELECT COUNT(*)
        FROM <include refid="TableName"/>
    </select>

    <update id="update">
        UPDATE <include refid="TableName"/>
        <set>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="jobNumber != null">job_number = #{jobNumber},</if>
            <if test="name != null">name = #{name},</if>
            <if test="password != null">password = #{password},</if>
            <if test="group.id != null">group_id = #{group.id},</if>
            <if test="mobilePhone != null">mobile_phone = #{mobilePhone},</if>
            <if test="officePhone != null">office_phone = #{officePhone},</if>
            <if test="email != null">email = #{email},</if>
            <if test="note != null">note = #{note}</if>
        </set>
        WHERE id = #{id}
    </update>


</mapper>