<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.donno.nj.dao.CustomerAddressDao">
    <resultMap id="BaseResultMap" type="com.donno.nj.domain.CustomerAddress">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="customer_idx" property="customerIdx" jdbcType="INTEGER"/>
        <result column="province" property="province" jdbcType="VARCHAR"/>
        <result column="city" property="city" jdbcType="VARCHAR"/>
        <result column="county" property="county" jdbcType="INTEGER"/>
        <result column="detail" property="detail" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="TblCustomerAddress">
        t_customer_address
    </sql>


    <select id="findByCustomerIdx" resultMap="BaseResultMap">
        SELECT *
        FROM <include refid="TblCustomerAddress"/>
        WHERE
        customer_idx = #{customerIdx}
    </select>

    <sql id="InsertColumnList">
        customer_idx,province , city, county,detail
    </sql>


    <insert id="insert">
        INSERT IGNORE INTO <include refid="TblCustomerAddress"/>(<include refid="InsertColumnList"/>)
        VALUES( #{customerIdx},#{province}, #{city},#{county},#{detail})
    </insert>



    <select id="count" resultType="Integer">
        SELECT COUNT(*)
        FROM <include refid="TblCustomerAddress"/>
    </select>

    <delete id="deleteByUserIdx" parameterType="java.lang.Integer">
        DELETE FROM <include refid="TblCustomerAddress"/> WHERE customer_idx= #{customerIdx}
    </delete>


</mapper>