    <!--</delete>-->


    <update id="update">
    UPDATE <include refid="TblOrderDetail"/>
    <set>
        <if test="subtotal != null">subtotal = #{subtotal},</if>
        <if test="refoundSum != null">refound_sum = #{refoundSum},</if>
    </set>
    WHERE id = #{id}
    </update>

