    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        INSERT IGNORE INTO <include refid="TableName"/>(<include refid="InsertColumnList"/>)
        VALUES( #{userId},#{number}, #{name},#{password},0,#{phone1},#{note})
    </insert>

    <delete id="deleteByUserId" parameterType="java.lang.String">
        DELETE FROM <include refid="TableName"/> WHERE user_id= #{userId,jdbcType=VARCHAR}
    </delete>


    <update id="update">
        UPDATE <include refid="TableName"/>
        <set>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="number != null">cst_number = #{number},</if>
            <if test="name != null">name = #{name},</if>
            <if test="password != null">password = #{password},</if>
            <if test="status != null">status = #{status},</if>
            <if test="phone1 != null">phone1 = #{phone1},</if>
            <if test="note != null">note = #{note}</if>
        </set>
        WHERE id = #{id}
    </update>

    <select id="count" resultType="Integer">
        SELECT COUNT(*)
        FROM <include refid="TableName"/>
