<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.donno.nj.dao.CustomerDao">

    <resultMap id="DetailResultMap" type="com.donno.nj.domain.Customer">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="user_id" property="userId" jdbcType="VARCHAR"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="cst_number" property="number" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="INTEGER"/>
        <result column="phone" property="phone" jdbcType="VARCHAR"/>
        <result column="note" property="note" jdbcType="VARCHAR"/>
        <result column="group_code" property="userGroup.code" jdbcType="VARCHAR"/>
        <result column="group_name" property="userGroup.name" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>


    <sql id="TblCustomer">
        t_customer
    </sql>

    <sql id="InsertColumnList">
        user_idx,cst_number ,status,phone1
    </sql>

    <insert id="insert">
        INSERT IGNORE INTO <include refid="TblCustomer"/>(<include refid="InsertColumnList"/>)
        VALUES( #{id},#{number},#{phone1}, #{phone1})
    </insert>

    <delete id="deleteByUserIdx" parameterType="java.lang.Integer">
    DELETE FROM <include refid="TblCustomer"/> WHERE user_idx= #{id}
    </delete>


    <update id="update">
    UPDATE <include refid="TblCustomer"/>
    <set>
    <if test="number != null">cst_number = #{number},</if>
    <if test="status != null">status = #{status},</if>
    <if test="phone1 != null">phone1 = #{phone1},</if>
    </set>
    WHERE user_idx = #{id}
    </update>

    <sql id="JoinSelectColumn">
        t_user.id, t_user.user_id,t_user.name,t_user.password,t_user.note,t_user.create_time,t_user.update_time,
        t_customer.cst_number,t_customer.status,t_customer.phone1,
        t_group.code as group_code,t_group.name as  group_name
    </sql>

    <sql id="JoinWhereCondition">
        t_user.id = t_customer.user_idx and
        t_user.group_idx = t_group.id
    </sql>

    <sql id="JoinTableList">
        t_user,t_customer,t_group
    </sql>

    <select id="getList" resultMap="DetailResultMap">
    SELECT <include refid="JoinSelectColumn"/>
    FROM <include refid="JoinTableList"/>
    WHERE
    (<include refid="JoinWhereCondition"/>)
    <if test="orderBy != ''">
    ORDER BY   ${orderBy}
    </if>
    limit #{limit} offset #{offset};
    </select>




</mapper>